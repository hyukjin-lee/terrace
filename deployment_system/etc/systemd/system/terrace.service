[Install]
WantedBy=multi-user.target

[Unit]
Description=Terrace
Requires=network.target
After=network.target

[Service]
WorkingDirectory=/home/web/terrace_deploy
Type=forking

ExecStart=/bin/bash -c 'pkill terrace; ./bin/terrace -production -redirect-to-https &'

StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=terraceService
User=web
Group=web

[Install]
WantedBy=multi-user.target
